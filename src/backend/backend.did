type Result = variant { Ok : text; Err : text };

// Base unit of ETH, i.e., 1 ETH = 10^18 Wei.
type Wei = nat;

service : {
  allow_agent: (allowed_agent: text) -> (Result);
  get_allowed_agent: () -> (Result) query;
  get_address : () -> (Result);
  get_balance : () -> (Result);
  send_eth : (to: text, amount: Wei) -> (Result);
}
